#%RAML 1.0

title: customer_exp


/customer:
  get:
    queryParameters:
      emailId:
        description: Get Customer By Email Id
        required: true
    responses:
      200:
        body:
          application/json:
            example: |
                [{
                    "status": "Success",
                    "description": "Get Profile"
                  },
                  {
                    "customerId": 228,
                    "customerUsername": "abc@abc.com",
                    "customerEmail": "abc@abc.com",
                    "customerName": "A",
                    "customerSurname": "C"
                  }
                  ]
  /{id}:
    get:
      description: Get Customer By Customer Id
      responses:
        200:
          body:
            application/json:
              example: |
                      [{
                          "status": "Success",
                          "description": "Get Profile"
                        },
                        {
                          "customerId": 228,
                          "customerUsername": "abc@abc.com",
                          "customerEmail": "abc@abc.com",
                          "customerName": "A",
                          "customerSurname": "C"
                        }
                        ]
    delete:
      description: "Remove an existing Customer"
      responses:
        200:
          body:
            application/json:
              example: |
                    {
                    "status": "Success",
                    "description": "Delete Profile"
                    }
                  
                                   
  post:
    description: "Create a new Customer"
    body:
      application/json:
        example: |
                {
                  "customerFirstName":"FName",
                  "customerLastName":"Lname",
                  "customerUsername":"abc@mail.com",
                  "customerEmail":"abc@mail.com"
                 }
    responses:
      201:
         body:
            application/json:
              example: |
                    {
                    "status": "Success",
                    "description": "Created Profile"
                    }
                  
  put:
    description: "Update a current Customer"
    body:
      application/json:
        example: |
          {
              "customerId": 228,
                  "customerFirstName":"FName",
                  "customerLastName":"Lname"
          }
    responses:
      200:
         body:
            application/json:
              example: |
                    {
                    "status": "Success",
                    "description": "Update Profile"
                    }
                  
/customers:
  get:
    responses:
      200:
        body:
          application/json:
            example: |
              [
                {
                  "customerId":1,
                  "customerFirstName":"FName",
                  "customerLastName":"Lname",
                  "customerUsername":"abc@mail.com",
                  "customerEmail":"abc@mail.com"
                 },
                 {
                   "customerId":2,
                  "customerFirstName":"FName",
                  "customerLastName":"Lname",
                  "customerUsername":"abc@mail.com",
                  "customerEmail":"abc@mail.com"
                 }
              ]