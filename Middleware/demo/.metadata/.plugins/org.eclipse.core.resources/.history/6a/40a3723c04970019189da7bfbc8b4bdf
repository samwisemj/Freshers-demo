<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:json="http://www.mulesoft.org/schema/mule/json" xmlns:metadata="http://www.mulesoft.org/schema/mule/metadata" xmlns:dw="http://www.mulesoft.org/schema/mule/ee/dw" xmlns:http="http://www.mulesoft.org/schema/mule/http" xmlns:tracking="http://www.mulesoft.org/schema/mule/ee/tracking" xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xmlns:spring="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-current.xsd
http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd
http://www.mulesoft.org/schema/mule/ee/tracking http://www.mulesoft.org/schema/mule/ee/tracking/current/mule-tracking-ee.xsd
http://www.mulesoft.org/schema/mule/ee/dw http://www.mulesoft.org/schema/mule/ee/dw/current/dw.xsd
http://www.mulesoft.org/schema/mule/json http://www.mulesoft.org/schema/mule/json/current/mule-json.xsd">
    <http:request-config name="HTTP_Request_Configuration1" host="localhost" port="8080" basePath="item" doc:name="HTTP Request Configuration"/>
    <http:request-config name="HTTP_Request_Configuration_Customer" host="localhost" port="8080" basePath="customer" doc:name="HTTP Request Configuration"/>
    <flow name="get:getOrderByCustomerId">
        <logger level="INFO" doc:name="Logger"/>
        <set-variable variableName="customerId" value="#[message.inboundProperties.'http.query.params'.customerId]" doc:name="Set Variable CustomerId"/>
        <http:request config-ref="HTTP_Request_Configuration_order" path="/" method="GET" doc:name="HTTP">
            <http:request-builder>
                <http:query-param paramName="customerId" value="#[message.inboundProperties.'http.query.params'.customerId]"/>
            </http:request-builder>
        </http:request>
        <flow-ref name="responseCreationFoOrderByCustId" doc:name="responseCreationFoOrderByCustId"/>
        <exception-strategy ref="globalexceptionCatch_Exception_Strategy" doc:name="Reference Exception Strategy"/>
    </flow>
    <flow name="post:createOrder">
        <logger level="INFO" doc:name="Logger"/>
        <byte-array-to-string-transformer doc:name="Byte Array to String"/>
        <set-variable variableName="payload" value="#[payload]" doc:name="Set Variable Payload"/>
        <flow-ref name="validateItems" doc:name="validate items"/>
        <set-payload value="#[flowVars.payload]" mimeType="application/json" doc:name="Set Payload"/>
        <logger level="INFO" doc:name="Logger"/>
        <http:request config-ref="HTTP_Request_Configuration_order" path="/" method="POST" doc:name="HTTP"/>
        <flow-ref name="responseCreationForOrderByOrderId" doc:name="Flow Reference"/>
        <exception-strategy ref="globalexceptionCatch_Exception_Strategy" doc:name="Reference Exception Strategy"/>
    </flow>
    <sub-flow name="validateItems">
        <dw:transform-message doc:name="Transform Message">
            <dw:set-payload><![CDATA[%dw 1.0
%output application/java
---
payload]]></dw:set-payload>
        </dw:transform-message>
        <set-variable variableName="itemIds" value="#[payload.items.keySet()]" doc:name="Set Variable itemIds"/>
        <set-variable variableName="customerId" value="#[payload.customerId]" doc:name="Set Variable CustomerId"/>
        <foreach collection="#[flowVars.itemIds]" doc:name="For Each">
            <logger level="INFO" doc:name="Logger"/>
            <http:request config-ref="HTTP_Request_Configuration1" path="/{id}" method="GET" doc:name="HTTP">
                <http:request-builder>
                    <http:uri-param paramName="id" value="#[payload]"/>
                    <http:header headerName="Accept" value="application/json"/>
                    <http:header headerName="Content-Type" value="application/json"/>
                </http:request-builder>
            </http:request>
            <dw:transform-message doc:name="Transform Message">
                <dw:set-payload><![CDATA[%dw 1.0
%output application/java
---
payload]]></dw:set-payload>
            </dw:transform-message>
            <choice doc:name="Choice">
                <when expression="#[payload.available]">
                    <logger level="INFO" doc:name="Logger"/>
                </when>
                <otherwise>
                    <set-payload value="{&quot;message&quot;:&quot;You are trying to ad an item which is not available&quot;}" mimeType="application/json" doc:name="Set Payload"/>
                    <expression-component doc:name="Expression"><![CDATA[throw new Exception("You are trying to ad an item which is not available");]]></expression-component>
                </otherwise>
            </choice>
        </foreach>
    </sub-flow>
    <sub-flow name="responseCreationFoOrderByCustId">
        <dw:transform-message doc:name="Transform Message">
            <dw:set-payload><![CDATA[%dw 1.0
%output application/java
---
payload]]></dw:set-payload>
        </dw:transform-message>
        <set-variable variableName="items" value="#[[]]" doc:name="Variable ItemsMap"/>
        <set-variable variableName="order" value="#[[]]" doc:name="Variable Order Response"/>
        <foreach doc:name="For Each to Iterate each order">
            <set-variable variableName="itemDetails" value="#[[]]" doc:name="Variable ItemDetails"/>
            <expression-component doc:name="Expression"><![CDATA[flowVars.items=payload.items.keySet()
flowVars.order=payload]]></expression-component>
            <set-variable variableName="itemHash" value="#[payload.items]" doc:name="Variable itemHash"/>
            <foreach collection="#[payload.items.keySet()]" doc:name="For Each to Iterate each item">
                <set-variable variableName="quantity" value="#[flowVars.itemHash.get(payload)]" doc:name="Set Variable quantity"/>
                <http:request config-ref="HTTP_Request_Configuration1" path="/{id}" method="GET" doc:name="Copy_of_HTTP">
                    <http:request-builder>
                        <http:uri-param paramName="id" value="#[payload]"/>
                        <http:header headerName="Accept" value="application/json"/>
                        <http:header headerName="Content-Type" value="application/json"/>
                    </http:request-builder>
                </http:request>
                <dw:transform-message doc:name="Transform Message">
                    <dw:set-payload><![CDATA[%dw 1.0
%output application/json
---
{
	itemId:payload.itemId,
	name:payload.name,
	cost:payload.cost,
	quantity:flowVars.quantity
		
}]]></dw:set-payload>
                </dw:transform-message>
                <expression-component doc:name="Expression"><![CDATA[flowVars.itemDetails.add(payload)]]></expression-component>
            </foreach>
            <dw:transform-message doc:name="Transform Message" metadata:id="938750bb-62b2-48f1-970c-658094c63afd">
                <dw:input-variable mimeType="application/json" variableName="itemDetails"/>
                <dw:set-payload><![CDATA[%dw 1.0
%output application/json
---
{
	"orderId": payload.orderId as :number,
	items: flowVars.itemDetails map ((item , indexOfItemDetail) -> {
		itemId: item.itemId,
		name: item.name,
		cost: item.cost,
		quantity: item.quantity
	})
}
	]]></dw:set-payload>
            </dw:transform-message>
            <expression-component doc:name="Expression"><![CDATA[flowVars.order.add(payload)]]></expression-component>
        </foreach>
        <http:request config-ref="HTTP_Request_Configuration_Customer" path="/{id}" method="GET" doc:name="HTTP Request to Call Custome Service">
            <http:request-builder>
                <http:uri-param paramName="id" value="#[flowVars.customerId]"/>
                <http:header headerName="Accept" value="application/json"/>
                <http:header headerName="Content-Type" value="application/json"/>
            </http:request-builder>
        </http:request>
        <dw:transform-message doc:name="Transform Message">
            <dw:set-payload><![CDATA[%dw 1.0
%output application/java
---
{
}]]></dw:set-payload>
            <dw:set-variable variableName="customerDetails"><![CDATA[%dw 1.0
%output application/json
---
payload]]></dw:set-variable>
        </dw:transform-message>
        <dw:transform-message doc:name="Transform Message" metadata:id="28f73212-ab20-492b-a6f3-b5f36f27dc7f">
            <dw:input-variable mimeType="application/json" variableName="order"/>
            <dw:set-payload><![CDATA[%dw 1.0
%output application/json
---
{
	customerDetails:{
		cutomerId: flowVars.customerDetails.id,
	customerFirstName: flowVars.customerDetails.firstName,
	customerLastName: flowVars.customerDetails.lastName,
	customerEmail: flowVars.customerDetails.email,
	customerAddress: flowVars.customerDetails.address
	},
	
orders:flowVars.order map ((order , indexOfOrder) -> {
	orderId: order.orderId,
	items: order.items map ((item , indexOfItem) -> {
		itemId: item.itemId,
		name: item.name,
		cost: item.cost,
		quantity: item.quantity
	})
})
}]]></dw:set-payload>
        </dw:transform-message>
    </sub-flow>
    <sub-flow name="responseCreationForOrderByOrderId">
        <dw:transform-message doc:name="Copy_of_Transform Message">
            <dw:set-payload><![CDATA[%dw 1.0
%output application/java
---
payload]]></dw:set-payload>
        </dw:transform-message>
        <set-variable variableName="items" value="#[[]]" doc:name="Copy_of_Variable ItemsMap"/>
        <set-variable variableName="orderId" value="#[payload.orderId]" doc:name="Copy_of_Variable Order Response"/>
        <set-variable variableName="itemDetails" value="#[[]]" doc:name="Copy_of_Variable ItemDetails"/>
        <set-variable variableName="itemHash" value="#[payload.items]" doc:name="Copy_of_Variable itemHash"/>
        <foreach collection="#[payload.items.keySet()]" doc:name="Copy_of_For Each to Iterate each item">
            <set-variable variableName="quantity" value="#[flowVars.itemHash.get(payload)]" doc:name="Copy_of_Set Variable quantity"/>
            <http:request config-ref="HTTP_Request_Configuration1" path="/{id}" method="GET" doc:name="Copy_of_Copy_of_HTTP">
                <http:request-builder>
                    <http:uri-param paramName="id" value="#[payload]"/>
                    <http:header headerName="Accept" value="application/json"/>
                    <http:header headerName="Content-Type" value="application/json"/>
                </http:request-builder>
            </http:request>
            <dw:transform-message doc:name="Copy_of_Transform Message">
                <dw:set-payload><![CDATA[%dw 1.0
%output application/json
---
{
	itemId:payload.itemId,
	name:payload.name,
	cost:payload.cost,
	quantity:flowVars.quantity
		
}]]></dw:set-payload>
            </dw:transform-message>
            <expression-component doc:name="Copy_of_Expression"><![CDATA[flowVars.itemDetails.add(payload)]]></expression-component>
        </foreach>
        <logger level="INFO" doc:name="Logger"/>
        <http:request config-ref="HTTP_Request_Configuration_Customer" path="/{id}" method="GET" doc:name="HTTP Request to Call Custome Service">
            <http:request-builder>
                <http:uri-param paramName="id" value="#[payload.customerId]"/>
                <http:header headerName="Accept" value="application/json"/>
                <http:header headerName="Content-Type" value="application/json"/>
            </http:request-builder>
        </http:request>
        <dw:transform-message doc:name="Transform Message">
            <dw:set-payload><![CDATA[%dw 1.0
%output application/json
---
{
}]]></dw:set-payload>
            <dw:set-variable variableName="customerDetails"><![CDATA[%dw 1.0
%output application/java
---
payload]]></dw:set-variable>
        </dw:transform-message>
        <logger level="INFO" doc:name="Logger"/>
        <dw:transform-message doc:name="Transform Message" metadata:id="3fbac094-129e-4ee7-a5f3-728f6c325c1d">
            <dw:input-variable mimeType="application/json" variableName="itemDetails"/>
            <dw:set-payload><![CDATA[%dw 1.0
%output application/json
---
{
	orderId: flowVars.orderId,
	
	cutomerId: flowVars.customerDetails.id,
	customerFirstName: flowVars.customerDetails.firstName,
	customerLastName: flowVars.customerDetails.lastName,
	customerEmail: flowVars.customerDetails.email,
	customerAddress: flowVars.customerDetails.address,
	items: flowVars.itemDetails map ((itemDetail , indexOfItemDetail) -> {
		itemId: itemDetail.itemId
+ itemDetail.itemId,
		itemName: itemDetail.name,
		itemCost: itemDetail.cost,
		itemCount: itemDetail.quantity
	})
	
}]]></dw:set-payload>
        </dw:transform-message>
    </sub-flow>
    <flow name="get:getOrderByOrderId">
        <logger level="INFO" doc:name="Logger"/>
        <http:request config-ref="HTTP_Request_Configuration_order" path="/{id}" method="GET" doc:name="HTTP">
            <http:request-builder>
                <http:uri-param paramName="id" value="#[message.inboundProperties.'http.uri.params'.id]"/>
            </http:request-builder>
        </http:request>
        <flow-ref name="responseCreationForOrderByOrderId" doc:name="Flow Reference"/>
        <exception-strategy ref="globalexceptionCatch_Exception_Strategy" doc:name="Reference Exception Strategy"/>
    </flow>
    <flow name="delete:deleteByOrderId">
        <logger level="INFO" doc:name="Logger"/>
        <http:request config-ref="HTTP_Request_Configuration_order" path="/{id}" method="DELETE" doc:name="HTTP">
            <http:request-builder>
                <http:uri-param paramName="id" value="#[message.inboundProperties.'http.uri.params'.id]"/>
            </http:request-builder>
        </http:request>
        <exception-strategy ref="globalexceptionCatch_Exception_Strategy" doc:name="Exception Strategy"/>
    </flow>
</mule>
