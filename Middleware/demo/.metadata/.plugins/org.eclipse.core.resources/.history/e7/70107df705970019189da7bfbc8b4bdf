        <copy-properties propertyName="#[message.inboundProperties.accept]" doc:name="Property"/>
        <copy-properties propertyName="#[message.inboundProperties.'content-type']" doc:name="Property"/>
        <apikit:router config-ref="cust-exp-config" doc:name="APIkit Router"/>
        <exception-strategy ref="cust-exp-apiKitGlobalExceptionMapping" doc:name="Reference Exception Strategy"/>
    </flow>
    <flow name="cust-exp-console">
        <http:listener config-ref="cust-exp-httpListenerConfig" path="/console/*" doc:name="HTTP"/>
        <apikit:console config-ref="cust-exp-config" doc:name="APIkit Console"/>
    </flow>
